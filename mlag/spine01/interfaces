
auto lo
iface lo inet loopback
    address 10.0.0.21/32

auto eth0
iface eth0 inet dhcp
   vrf mgmt
   
auto mgmt
iface mgmt
   address 127.0.0.1/8
   vrf-table auto


# downlinks
auto swp1
iface swp1
   mtu 9216

auto swp2
iface swp2
   mtu 9216

auto swp3
iface swp3
   mtu 9216

auto swp4
iface swp4
   mtu 9216
