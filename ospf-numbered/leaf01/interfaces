
auto lo
iface lo inet loopback
    address 10.0.0.11/32

auto eth0
iface eth0 inet dhcp


# uplinks
auto swp51
iface swp51
    address 10.1.0.1/31

auto swp52
iface swp52
    address 10.1.0.3/31


# bridge to hosts
auto swp1
iface swp1

auto br0
iface br0
     bridge-ports swp1
     address 172.16.1.1/24
